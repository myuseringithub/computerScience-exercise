{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile",
			"command": "make",
			"args": ["compileWarn"],
			"options": {
				"cwd": "${workspaceFolder}/source"
			},
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "run",
			"command": "make",
			"args": ["run"],
			"options": {
				"cwd": "${workspaceFolder}/source"
			},
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": ["compile"]
		},
		{
			"label": "test",
			"command": "make",
			"args": ["test-all"],
			"options": {
				"cwd": "${workspaceFolder}/source"
			},
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"showReuseMessage": true,
				"clear": true
			},
			"dependsOn": ["compile"]
		}
	]
}
